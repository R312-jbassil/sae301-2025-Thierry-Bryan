---
// Test des couleurs
import Layout from "../layouts/Layout.astro";
---

<Layout title="Test Couleurs">
  <div class="p-8 bg-base-100">
    <h1 class="text-4xl font-bold mb-8">Test des Couleurs DaisyUI</h1>
    
    <!-- Test des boutons avec couleurs fixes -->
    <div class="grid gap-4 mb-8">
      <h2 class="text-2xl font-bold">Boutons avec couleurs fixes :</h2>
      
      <button style="background-color: #003366; color: #ffffff; padding: 12px 24px; border-radius: 8px; border: none;">
        Bouton Bleu Direct (#003366)
      </button>
      
      <button style="background-color: #830000; color: #ffffff; padding: 12px 24px; border-radius: 8px; border: none;">
        Bouton Rouge Direct (#830000)
      </button>
    </div>
    
    <!-- Test des boutons DaisyUI -->
    <div class="grid gap-4 mb-8">
      <h2 class="text-2xl font-bold">Boutons DaisyUI :</h2>
      
      <button class="btn btn-primary">Bouton Primary DaisyUI</button>
      <button class="btn btn-secondary">Bouton Secondary DaisyUI</button>
      <button class="btn btn-accent">Bouton Accent DaisyUI</button>
    </div>
    
    <!-- Test des couleurs CSS variables -->
    <div class="grid gap-4">
      <h2 class="text-2xl font-bold">Variables CSS :</h2>
      
      <div class="p-4 rounded" style="background-color: var(--primary, #ff0000); color: white;">
        Background avec var(--primary)
      </div>
      
      <div class="p-4 rounded" style="background-color: var(--secondary, #ff0000); color: white;">
        Background avec var(--secondary)
      </div>
      
      <div class="p-4 rounded bg-primary text-primary-content">
        Classes DaisyUI bg-primary text-primary-content
      </div>
      
      <div class="p-4 rounded bg-secondary text-secondary-content">
        Classes DaisyUI bg-secondary text-secondary-content
      </div>
    </div>
  </div>
</Layout>