---
// filepath: src/pages/panier/[id].astro - Détails d'une création
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/ui/Button.astro";
import pb from "../../utils/pb";
import type { Lunette } from "../../utils/pocketbase-types";

// Récupérer l'ID depuis l'URL
const { id } = Astro.params;

let lunette: any = null;
let error = '';

if (id) {
  try {
    // Récupérer la lunette avec les relations
    lunette = await pb.collection('Lunette').getOne(id, {
      expand: 'id_materiau,id_utilisateur'
    });
  } catch (e) {
    error = `Création non trouvée : ${e}`;
    console.error('Erreur lors de la récupération de la création:', e);
  }
} else {
  error = 'ID de création manquant';
}
---

<Layout title={lunette ? `${lunette.nom_modele} - TaVue` : 'Création non trouvée - TaVue'}>
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-6">
      
      <!-- Navigation -->
      <div class="mb-6">
        <a 
          href="/panier"
          class="inline-flex items-center text-[#003366] hover:text-[#830000] transition-colors duration-300 font-secondary"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Retour au panier
        </a>
      </div>

      {error ? (
        <!-- Message d'erreur -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
          <svg class="w-12 h-12 text-red-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h2 class="font-primary text-xl text-red-800 mb-2">Erreur</h2>
          <p class="font-secondary text-red-600">{error}</p>
        </div>
      ) : lunette && (
        <div class="grid lg:grid-cols-2 gap-8">
          
          <!-- Section gauche : Prévisualisation -->
          <div class="bg-white rounded-xl shadow-md p-6">
            <h2 class="font-primary text-xl text-[#003366] mb-4">Prévisualisation</h2>
            
            <!-- Container SVG -->
            <div class="h-64 bg-gradient-to-br from-gray-50 to-gray-100 rounded-lg flex items-center justify-center p-6 mb-6">
              {lunette.code_svg ? (
                <div class="w-full h-full flex items-center justify-center" set:html={lunette.code_svg} />
              ) : (
                <div class="text-center">
                  <svg class="w-16 h-16 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  <p class="text-gray-500 font-secondary text-sm">Aperçu non disponible</p>
                </div>
              )}
            </div>

            <!-- Palette de couleurs -->
            <div class="flex gap-4 justify-center">
              <div class="text-center">
                <div class="w-8 h-8 rounded-full border-2 border-gray-300 mx-auto mb-1" style={`background-color: ${lunette.couleur_monture}`}></div>
                <p class="text-xs font-secondary text-gray-600">Monture</p>
              </div>
              <div class="text-center">
                <div class="w-8 h-8 rounded-full border-2 border-gray-300 mx-auto mb-1" style={`background-color: ${lunette.couleur_branches}`}></div>
                <p class="text-xs font-secondary text-gray-600">Branches</p>
              </div>
              <div class="text-center">
                <div class="w-8 h-8 rounded-full border-2 border-gray-300 mx-auto mb-1" style={`background-color: ${lunette.couleur_verres}`}></div>
                <p class="text-xs font-secondary text-gray-600">Verres</p>
              </div>
            </div>
          </div>

          <!-- Section droite : Informations détaillées -->
          <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex justify-between items-start mb-6">
              <div>
                <h1 class="font-primary text-2xl text-[#003366] mb-2">{lunette.nom_modele}</h1>
                <p class="font-secondary text-gray-600">
                  Créé le {new Date(lunette.date_enregistrement).toLocaleDateString('fr-FR', { 
                    day: 'numeric', 
                    month: 'long', 
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  })}
                </p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-[#003366] font-secondary">249€</div>
                <p class="text-xs text-gray-500 font-secondary">Fabrication française</p>
              </div>
            </div>

            <!-- Spécifications techniques -->
            <div class="space-y-4 mb-6">
              <h3 class="font-secondary font-semibold text-lg text-[#003366]">Spécifications</h3>
              
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-gray-50 rounded-lg p-3">
                  <p class="text-sm font-secondary text-gray-600 mb-1">Taille des verres</p>
                  <p class="font-secondary font-semibold text-gray-800">{lunette.taille_verres}mm</p>
                </div>
                
                <div class="bg-gray-50 rounded-lg p-3">
                  <p class="text-sm font-secondary text-gray-600 mb-1">Largeur du pont</p>
                  <p class="font-secondary font-semibold text-gray-800">{lunette.largeur_pont}mm</p>
                </div>
              </div>

              <!-- Matériau -->
              <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-sm font-secondary text-gray-600 mb-1">Matériau</p>
                <p class="font-secondary font-semibold text-gray-800">
                  {lunette.expand && lunette.expand.id_materiau ? lunette.expand.id_materiau.libelle : 'Non spécifié'}
                </p>
              </div>
            </div>

            <!-- Couleurs détaillées -->
            <div class="space-y-4 mb-6">
              <h3 class="font-secondary font-semibold text-lg text-[#003366]">Couleurs</h3>
              
              <div class="space-y-3">
                <div class="flex justify-between items-center">
                  <span class="font-secondary text-gray-600">Couleur monture:</span>
                  <div class="flex items-center gap-2">
                    <div class="w-6 h-6 rounded-full border border-gray-300" style={`background-color: ${lunette.couleur_monture}`}></div>
                    <span class="font-secondary font-medium text-gray-800">{lunette.couleur_monture}</span>
                  </div>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="font-secondary text-gray-600">Couleur branches:</span>
                  <div class="flex items-center gap-2">
                    <div class="w-6 h-6 rounded-full border border-gray-300" style={`background-color: ${lunette.couleur_branches}`}></div>
                    <span class="font-secondary font-medium text-gray-800">{lunette.couleur_branches}</span>
                  </div>
                </div>
                
                <div class="flex justify-between items-center">
                  <span class="font-secondary text-gray-600">Couleur verres:</span>
                  <div class="flex items-center gap-2">
                    <div class="w-6 h-6 rounded-full border border-gray-300" style={`background-color: ${lunette.couleur_verres}`}></div>
                    <span class="font-secondary font-medium text-gray-800">{lunette.couleur_verres}</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Actions -->
            <div class="flex gap-3">
              <button 
                id="modify-btn"
                class="flex-1 px-4 py-3 bg-[#003366] text-white rounded-lg hover:bg-[#830000] transition-colors font-secondary font-medium"
                data-creation-id={lunette.id}
              >
                Modifier
              </button>
              
              <button 
                id="delete-btn"
                class="px-4 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors"
                data-creation-id={lunette.id}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modifyBtn = document.querySelector('#modify-btn') as HTMLButtonElement;
    const deleteBtn = document.querySelector('#delete-btn') as HTMLButtonElement;

    // Bouton Modifier - redirection avec paramètres
    modifyBtn?.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLButtonElement;
      const creationId = target?.dataset.creationId;
      if (creationId) {
        // Rediriger vers le configurateur avec l'ID de la création à modifier
        window.location.href = `/configurator?edit=${creationId}`;
      }
    });

    // Bouton Supprimer
    deleteBtn?.addEventListener('click', async (e) => {
      const target = e.currentTarget as HTMLButtonElement;
      const creationId = target?.dataset.creationId;
      
      if (!confirm('Êtes-vous sûr de vouloir supprimer cette création ? Cette action est irréversible.')) {
        return;
      }

      try {
        // Désactiver le bouton pendant la suppression
        if (target) {
          target.disabled = true;
          target.textContent = 'Suppression...';
        }

        const pbModule = await import('../../utils/pb');
        const pb = pbModule.default;
        
        await pb.collection('Lunette').delete(creationId);
        
        // Retourner à la liste avec un message de succès
        window.location.href = '/panier?deleted=true';
      } catch (error) {
        console.error('Erreur lors de la suppression:', error);
        alert('Erreur lors de la suppression de la création. Veuillez réessayer.');
        
        // Réactiver le bouton en cas d'erreur
        if (target) {
          target.disabled = false;
          target.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          `;
        }
      }
    });
  });
</script>
</Layout>