---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="TaVue - Mon Panier">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-6">
      
      <!-- Header de la page -->
      <div class="mb-8">
        <h1 class="font-primary text-3xl text-[#003366] mb-2">Mon Panier</h1>
        <p class="font-secondary text-gray-600">Retrouvez toutes vos paires de lunettes personnalisées</p>
      </div>

      <!-- Bouton pour créer une nouvelle paire -->
      <div class="mb-6">
        <a 
          href="/configurator"
          class="inline-flex items-center px-6 py-3 bg-[#003366] text-white rounded-xl hover:bg-[#830000] transition-colors duration-300 font-secondary font-medium"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Créer une nouvelle paire
        </a>
      </div>

      <!-- Container pour les créations -->
      <div id="creations-container">
        <!-- Chargement -->
        <div id="loading" class="text-center py-12">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-[#003366] mx-auto mb-4"></div>
          <p class="font-secondary text-gray-600">Chargement de votre panier...</p>
        </div>

        <!-- État vide -->
        <div id="empty-state" class="hidden text-center py-12">
          <div class="mb-6">
            <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 12a3 3 0 11-6 0 3 3 0 616 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <h2 class="font-primary text-xl text-gray-600 mb-2">Votre panier est vide</h2>
          <p class="font-secondary text-gray-500 mb-6">Commencez à créer votre première paire de lunettes personnalisée</p>
          <a 
            href="/configurator"
            class="inline-flex items-center px-6 py-3 bg-[#003366] text-white rounded-xl hover:bg-[#830000] transition-colors duration-300 font-secondary font-medium"
          >
            Créer ma première paire
          </a>
        </div>

        <!-- Grille des créations -->
        <div id="creations-grid" class="hidden">
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" id="creations-list"></div>
        </div>
      </div>

      <!-- Message d'erreur -->
      <div id="error-message" class="hidden bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-secondary text-red-800">Erreur lors du chargement de votre panier</span>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    const loadingDiv = document.querySelector('#loading');
    const emptyStateDiv = document.querySelector('#empty-state');
    const creationsGrid = document.querySelector('#creations-grid');
    const creationsList = document.querySelector('#creations-list');
    const errorMessage = document.querySelector('#error-message');

    try {
      // Import des utilitaires
      const authModule = await import('../../utils/auth');
      const lunetteModule = await import('../../utils/lunettes');
      
      const { AuthService } = authModule;
      const { getUserLunettes } = lunetteModule;

      // Vérifier l'authentification
      if (!AuthService.isAuthenticated()) {
        window.location.href = '/auth?redirect=' + encodeURIComponent(window.location.pathname);
        return;
      }

      // Charger les créations
      const lunettes = await getUserLunettes();
      console.log('Créations chargées:', lunettes);

      // Cacher le chargement
      loadingDiv?.classList.add('hidden');

      if (!lunettes || lunettes.length === 0) {
        // Afficher l'état vide
        emptyStateDiv?.classList.remove('hidden');
      } else {
        // Afficher la grille
        creationsGrid?.classList.remove('hidden');
        
        // Générer les cartes avec des liens directs
        if (creationsList) {
          creationsList.innerHTML = lunettes.map(lunette => `
            <a href="/panier/${lunette.id}" class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow duration-300 block">
              
              <!-- Prévisualisation SVG -->
              <div class="h-48 bg-gradient-to-br from-gray-100 to-gray-200 relative overflow-hidden flex items-center justify-center p-4">
                ${lunette.code_svg ? `
                  <div class="w-full h-full flex items-center justify-center">
                    ${(() => {
                      let svgContent = lunette.code_svg;
                      
                      // Le SVG sauvegardé a déjà les couleurs intégrées
                      if (lunette.couleur_verres === 'transparent' || !lunette.couleur_verres) {
                        // Pour les verres transparents, remplacer la couleur par blanc dans le groupe verres
                        svgContent = svgContent.replace(
                          /<g id="verres">(.*?)<\/g>/s,
                          (match, content) => {
                            // Remplacer tous les fills dans le groupe verres par blanc
                            const whiteContent = content.replace(/fill="[^"]*"/g, 'fill="white"');
                            return `<g id="verres">${whiteContent}</g>`;
                          }
                        );
                      }
                      // Pour les verres colorés, le SVG a déjà la bonne couleur
                      
                      return svgContent;
                    })()}
                  </div>
                ` : `
                  <div class="flex items-center justify-center">
                    <svg class="w-20 h-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 12a3 3 0 11-6 0 3 3 0 616 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  </div>
                `}
                
                <!-- Badge de couleurs -->
                <div class="absolute top-3 left-3 flex gap-2">
                  <div class="w-4 h-4 rounded-full border-2 border-white shadow-sm" style="background-color: ${lunette.couleur_monture}" title="Monture"></div>
                  <div class="w-4 h-4 rounded-full border-2 border-white shadow-sm" style="background-color: ${lunette.couleur_branches}" title="Branches"></div>
                  ${lunette.couleur_verres && lunette.couleur_verres !== 'transparent' ? 
                    `<div class="w-4 h-4 rounded-full border-2 border-white shadow-sm" style="background-color: ${lunette.couleur_verres}" title="Verres"></div>` : 
                    `<div class="w-4 h-4 rounded-full border-2 border-gray-300 shadow-sm bg-white bg-opacity-80" title="Verres transparents">
                       <div class="w-full h-full rounded-full bg-gradient-to-br from-white to-gray-50 opacity-60"></div>
                     </div>`
                  }
                </div>
              </div>

              <!-- Informations -->
              <div class="p-5">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="font-secondary font-semibold text-lg text-gray-800 truncate">${lunette.nom_modele}</h3>
                  <span class="text-xs font-secondary text-gray-500 ml-2 whitespace-nowrap">
                    ${new Date(lunette.date_enregistrement).toLocaleDateString('fr-FR')}
                  </span>
                </div>

                <!-- Spécifications -->
                <div class="space-y-2 mb-4">
                  <div class="flex justify-between text-sm">
                    <span class="font-secondary text-gray-600">Dimensions:</span>
                    <span class="font-secondary text-gray-800">${lunette.taille_verres}mm × ${lunette.largeur_pont}mm</span>
                  </div>
                  <div class="flex justify-between text-sm">
                    <span class="font-secondary text-gray-600">Verres:</span>
                    <span class="font-secondary text-gray-800">
                      ${lunette.couleur_verres === 'transparent' || !lunette.couleur_verres ? 'Transparents' : 'Teintés'}
                    </span>
                  </div>
                </div>

                <!-- Bouton d'aperçu -->
                <div class="text-center">
                  <span class="inline-block px-4 py-2 bg-[#003366] text-white rounded-lg text-sm font-secondary">
                    Voir les détails
                  </span>
                </div>
              </div>
            </a>
          `).join('');
        }
      }

    } catch (error) {
      console.error('Erreur lors du chargement du panier:', error);
      
      // Cacher le chargement et afficher l'erreur
      loadingDiv?.classList.add('hidden');
      errorMessage?.classList.remove('hidden');
    }
  });
</script>
</Layout>
