---
// filepath: src/components/Header.astro
import Button from "./ui/Button.astro";
---

<header class="w-full bg-white relative">
  <!-- Bordure inférieure tricolore -->
  <div
    class="absolute bottom-0 left-0 right-0 h-1"
    style="background: linear-gradient(90deg, var(--bleu) 0%, var(--blanc) 50%, var(--rouge) 100%);"
  >
  </div>

  <!-- Contenu du header -->
  <div class="container mx-auto px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <img src="/logo_tavue.svg" alt="TaVue" class="h-6 w-auto mr-2" />
      </div>

      <!-- Navigation centrale -->
      <nav class="hidden md:flex">
        <button
          class="px-4 py-2 bg-transparent text-bleu hover:text-rouge transition-all duration-300 font-secondary text-sm"
        >
          Composer ma paire
        </button>
      </nav>

      <!-- Actions utilisateur -->
      <div class="flex items-center gap-3">
        <!-- État utilisateur (dynamique) -->
        <div id="user-actions">
          <!-- Contenu injecté par JavaScript -->
        </div>

        <!-- Panier -->
        <a
          href="/panier"
          class="flex items-center gap-1 text-bleu hover:text-rouge transition-all duration-300 hover:-translate-y-0.5"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z"
            ></path>
          </svg>
          <span class="font-secondary text-sm">Panier</span>
        </a>
      </div>

      <!-- Menu mobile -->
      <button
        class="md:hidden text-bleu hover:text-rouge transition-colors duration-300"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  // Gestion de l'état utilisateur dans le header
  document.addEventListener("DOMContentLoaded", async () => {
    const userActionsContainer = document.querySelector("#user-actions");

    if (!userActionsContainer) return;

    try {
      // Import des utilitaires d'authentification
      const authModule = await import("../utils/auth");
      const { AuthService } = authModule;

      // Fonction pour mettre à jour l'interface utilisateur
      function updateUserInterface() {
        if (AuthService.isAuthenticated()) {
          const user = AuthService.getCurrentUser();
          const userName = user?.prenom || "Utilisateur";

          // Interface utilisateur connecté
          userActionsContainer.innerHTML = `
            <div class="relative group">
              <button class="flex items-center gap-1 text-bleu hover:text-rouge transition-all duration-300 hover:-translate-y-0.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="font-secondary text-sm">${userName}</span>
                <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              
              <!-- Menu déroulant -->
              <div class="absolute right-0 top-full mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="py-2">
                  <a href="/profil" class="block px-4 py-2 text-sm font-secondary text-gray-700 hover:bg-gray-50 transition-colors">
                    Mon profil
                  </a>
                  <hr class="my-1">
                  <button id="logout-btn" class="block w-full text-left px-4 py-2 text-sm font-secondary text-red-600 hover:bg-red-50 transition-colors">
                    Se déconnecter
                  </button>
                </div>
              </div>
            </div>
          `;

          // Ajouter l'événement de déconnexion
          const logoutBtn = document.querySelector("#logout-btn");
          logoutBtn?.addEventListener("click", () => {
            AuthService.logout();
          });
        } else {
          // Interface utilisateur non connecté
          userActionsContainer.innerHTML = `
            <a href="/auth" class="flex items-center gap-1 text-bleu hover:text-rouge transition-all duration-300 hover:-translate-y-0.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <span class="font-secondary text-sm">Se connecter</span>
            </a>
          `;
        }
      }

      // Initialiser l'interface
      updateUserInterface();

      // Écouter les changements d'état d'authentification
      AuthService.onAuthChange((isAuthenticated, user) => {
        updateUserInterface();
      });
    } catch (error) {
      console.log("Erreur lors du chargement de l'authentification:", error);

      // Interface de fallback
      userActionsContainer.innerHTML = `
        <a href="/auth" class="flex items-center gap-1 text-bleu hover:text-rouge transition-all duration-300 hover:-translate-y-0.5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
          </svg>
          <span class="font-secondary text-sm">Se connecter</span>
        </a>
      `;
    }
  });
</script>
