---
import Button from "../ui/Button.astro";

export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  primaryButton?: {
    text: string;
    href?: string;
    variant?: "fixed" | "flexible";
  };
  secondaryButton?: {
    text: string;
    href?: string;
    variant?: "fixed" | "flexible";
  };
  imageSlot?: boolean;
}

const {
  title = "TaVue",
  subtitle = "L'√©l√©gance fran√ßaise √† votre vue",
  description = "Cr√©ez vos lunettes sur-mesure avec notre configurateur 3D. Design fran√ßais moderne, mat√©riaux premium et livraison rapide.",
  primaryButton = { text: "Configurer mes lunettes", href: "/configurator", variant: "fixed" },
  secondaryButton = { text: "D√©couvrir", href: "#services", variant: "flexible" },
  imageSlot = true,
} = Astro.props;
---

<!-- SEO: Structure s√©mantique avec schema.org -->
<section 
  class="hero-french min-h-[calc(100vh-60px)] flex items-center py-12" 
  itemscope 
  itemtype="https://schema.org/Organization"
>
  <div class="container mx-auto px-6">
    <div class="grid lg:grid-cols-12 gap-8 items-center max-w-6xl mx-auto">
      
      <!-- Contenu principal - 7 colonnes sur desktop -->
      <div class="lg:col-span-7 space-y-6">
        <!-- Titres -->
        <div class="space-y-3">
          <h1 
            class="font-primary text-4xl lg:text-5xl xl:text-6xl text-bleu leading-tight"
            itemprop="name"
          >
            {title}
          </h1>
          
          <h2 class="font-primary text-lg lg:text-xl text-rouge font-normal">
            {subtitle}
          </h2>
          
          <div class="divider-french w-16 h-1"></div>
        </div>

        <!-- Description -->
        <p 
          class="text-base lg:text-lg text-noir leading-relaxed max-w-md"
          itemprop="description"
        >
          {description}
        </p>

        <!-- Boutons -->
        <div class="flex flex-col sm:flex-row gap-3">
          {primaryButton && (
            <Button 
              variant={primaryButton.variant} 
              href={primaryButton.href}
              class="btn-french"
            >
              {primaryButton.text}
            </Button>
          )}
          
          {secondaryButton && (
            <Button 
              variant={secondaryButton.variant} 
              href={secondaryButton.href}
              class="btn-french-outline"
            >
              {secondaryButton.text}
            </Button>
          )}
        </div>
      </div>

      <!-- Image compacte - 5 colonnes sur desktop -->
      {imageSlot && (
        <div class="lg:col-span-5 relative">
          <div class="aspect-4/3 lg:aspect-square bg-gris-clair rounded-2xl flex items-center justify-center border border-gris max-w-md mx-auto">
            <!-- Placeholder optimis√© -->
            <div class="text-center space-y-3">
              <div class="w-12 h-12 mx-auto bg-bleu bg-opacity-10 rounded-full flex items-center justify-center">
                <span class="text-xl">üëì</span>
              </div>
              <p class="text-sm text-noir opacity-60">
                Lunettes TaVue
              </p>
            </div>
          </div>
          
          <!-- D√©coration minimaliste -->
          <div class="absolute -top-2 -right-2 w-6 h-6 bg-rouge bg-opacity-10 rounded-full"></div>
          <div class="absolute -bottom-2 -left-2 w-4 h-4 bg-bleu bg-opacity-10 rounded-full"></div>
        </div>
      )}
    </div>
  </div>
</section>
