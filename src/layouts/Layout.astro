---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}

const { 
  title = "TaVue - Configurateur de Lunettes", 
  description = "Créez vos lunettes sur-mesure avec notre configurateur 3D français. Design moderne, matériaux premium et livraison rapide.",
  noindex = false
} = Astro.props;
---

<!doctype html>
<html lang="fr" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="TaVue" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#1e40af" />
    <meta name="generator" content={Astro.generator} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
  </head>
  <body class="font-secondary">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
